<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/transparent"
    tools:context=".TodayPlanFragment">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layout_CardView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/toolBar_text"
            android:text="Today Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <View
                            android:layout_weight="1"
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                        <View
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_inuse"
                        android:src="@drawable/ic_main_car"
                        android:padding="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </RelativeLayout>
            </FrameLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:background="@drawable/timeline_inuse"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/toolBar_text"
                        android:text="8:00 AM  Traveling to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/toolBar_text"
                        android:text="Binh Ba Island, Nha Trang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/toolBar_text"
                        android:text="Expense: 100.000 đ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/timeline1"
                    android:src="@drawable/ic_trip_menu"
                    android:background="@color/ic_new_trip"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                        <View
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_main"
                        android:src="@drawable/ic_main_restaurant"
                        android:padding="6dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </RelativeLayout>
            </FrameLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:background="@drawable/timeline_infor"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/toolBar_text"
                        android:text="1:00 AM  Eating at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/toolBar_text"
                        android:text="Cay Xoai Restaurant, Binh Ba"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/toolBar_text"
                        android:text="Expense: 800.000 đ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/timeline2"
                    android:src="@drawable/ic_trip_menu"
                    android:background="@color/colorPrimary"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <View
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                        <View
                            android:layout_weight="1"
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_main"
                        android:src="@drawable/ic_main_car"
                        android:padding="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </RelativeLayout>
            </FrameLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_marginVertical="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:background="@drawable/timeline_infor"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/toolBar_text"
                        android:text="4:00 AM  Traveling to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/toolBar_text"
                        android:text="Phu Dong Park, Nha Trang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/toolBar_text"
                        android:text="Expense: 80.000 đ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/timeline3"
                    android:src="@drawable/ic_trip_menu"
                    android:background="@color/colorPrimary"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_float_trip_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_trip_edit_tool" />

</RelativeLayout>