<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="day01.quang.projectmon.ConfirmTripActivity">
    <android.support.v7.widget.CardView

        android:id="@+id/layout_CardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:weightSum="10"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/toolBar_text"
                    android:text="Trip to Nha Trang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                style="@style/ic_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:hint="Your budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingBottom="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="10"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:textSize="20sp"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/toolBar_text"
                                android:text="Booking"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginHorizontal="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                style="@style/ic_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_hotel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />
                                <TextView
                                    style="@style/review_trip_text"
                                    android:text="Vinpearl Land Hotel And Resort"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:weightSum="2"
                                style="@style/ic_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:paddingRight="10dp"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:src="@drawable/ic_start_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />
                                    <EditText
                                        android:hint="Check in"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:src="@drawable/ic_spent_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />
                                    <EditText
                                        android:hint="Check out"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_marginVertical="5dp"
                                android:background="#c6c6c6"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"/>


                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="18dp"
            android:textColor="@color/toolBar_text"
            android:text="Cancel"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <Button
            android:onClick="moveToHome"
            android:textSize="18dp"
            android:textColor="#38ff00"
            android:text="Confirm"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>
