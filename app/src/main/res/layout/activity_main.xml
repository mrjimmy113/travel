<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true">
    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@drawable/gradient_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <FrameLayout

            android:layout_alignParentTop="true"
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <android.support.v7.widget.Toolbar
                app:titleTextColor="@color/toolBar_text"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#00ff0000"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        </FrameLayout>
        <LinearLayout
            android:layout_below="@id/content_frame"
            android:layout_above="@id/content_main_function"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/layout_no_data"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_large_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#dfdfdf"
                    android:text="Don`t know where to go? \n  Hit Explore Now"

                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_yourTrip"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View

                    android:background="@drawable/horizontal_pipe"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="5dp"/>
                <TextView
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:background="@drawable/horizontal_pipe"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Your Trip"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@drawable/horizontal_pipe"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="5dp"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/layout_CardView"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardPreventCornerOverlap="false"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/beach"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="200dp" />

                </FrameLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_alignParentTop="true"
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="Trip To Nha Trang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:text="detail"
                            android:background="#00ffffff"
                            android:textColor="#ffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Button
                            android:text="share"
                            android:background="#00ffffff"
                            android:textColor="#ffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Button
                            android:text="go"
                            android:background="#00ffffff"
                            android:textColor="#0dff00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:background="#00ff0000"
            android:id="@+id/content_main_function"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <Button
                android:background="#00ff0000"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_assignment_black_24dp"
                android:drawablePadding="-15dp"
                android:paddingTop="20dp"
                android:text="Trip Plan"
                android:textColor="@color/toolBar_text"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:onClick="switchScreen"
                />
            <Button
                android:background="#00ff0000"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_explore_black_24dp"
                android:drawablePadding="-15dp"
                android:paddingTop="20dp"
                android:text="Explore"
                android:textColor="@color/toolBar_text"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="80dp"/>
            <Button
                android:background="#00ff0000"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_favorite_black_24dp"
                android:drawablePadding="-15dp"
                android:paddingTop="20dp"
                android:text="Favorite"
                android:textColor="@color/toolBar_text"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="80dp"/>


        </LinearLayout>

    </RelativeLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"
        />


</android.support.v4.widget.DrawerLayout>