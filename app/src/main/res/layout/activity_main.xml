<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true">
    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@drawable/gradient_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <FrameLayout

            android:layout_alignParentTop="true"
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <android.support.v7.widget.Toolbar
                app:titleTextColor="@color/toolBar_text"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#00ff0000"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        </FrameLayout>
        <LinearLayout

            android:layout_below="@id/content_frame"
            android:layout_above="@id/content_main_function"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/layout_no_data"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_large_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#dfdfdf"
                    android:text="There is no \n Ongoing trip"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_yourTrip"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View

                    android:background="@drawable/horizontal_pipe"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="5dp"/>
                <TextView
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:background="@drawable/horizontal_pipe"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Trip to Nha Trang"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@drawable/horizontal_pipe"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="5dp"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/layout_CardView"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="10dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="10"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="20sp"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/toolBar_text"
                            android:text="Day 1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            />
                        <ImageButton
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/ic_trip_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <ImageButton
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/ic_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            style="@style/ic_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_destination"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                style="@style/review_trip_text"
                                android:text="Nha Trang - Khanh Hoa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ic_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_hotel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                style="@style/review_trip_text"
                                android:text="Vinpearl Land Hotel And Resort"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:weightSum="10"
                                android:background="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">
                                <TextView
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"
                                    android:textSize="20sp"
                                    android:background="@color/colorPrimary"
                                    android:textColor="@color/toolBar_text"
                                    android:text="Upcoming Activity"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    />
                                <ImageButton
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimary"
                                    android:src="@drawable/ic_trip_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />
                                <ImageButton
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimary"
                                    android:src="@drawable/ic_direction"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginHorizontal="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    style="@style/ic_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:src="@drawable/ic_visit_place"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        style="@style/review_trip_text"
                                        android:text="BÃ¬nh ba Island, Khanh Hoa"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <LinearLayout
                                    android:weightSum="2"
                                    style="@style/ic_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:paddingRight="10dp"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:src="@drawable/ic_start_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent" />
                                        <TextView
                                            style="@style/review_trip_text"
                                            android:text="8:30 AM"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:src="@drawable/ic_spent_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent" />
                                        <TextView
                                            style="@style/review_trip_text"
                                            android:text="360 m"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                                <View
                                    android:layout_marginVertical="5dp"
                                    android:background="#c6c6c6"
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"/>
                                <LinearLayout
                                    style="@style/ic_edit_text"
                                    android:weightSum="10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_remind"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        android:textSize="17sp"
                                        android:layout_weight="7"
                                        android:text="Remind me this activity"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content" />
                                    <Switch
                                        android:layout_weight="2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:background="#00ff0000"
            android:id="@+id/content_main_function"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <Button
                android:background="#00ff0000"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_assignment_black_24dp"
                android:drawablePadding="-15dp"
                android:paddingTop="20dp"
                android:text="Trip Plan"
                android:textColor="@color/toolBar_text"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:onClick="switchScreen"
                />
            <Button
                android:background="#00ff0000"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_explore_black_24dp"
                android:drawablePadding="-15dp"
                android:paddingTop="20dp"
                android:text="Explore"
                android:textColor="@color/toolBar_text"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="80dp"/>
            <Button
                android:onClick="moveToTripBank"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_trip_bank"
                android:drawablePadding="-15dp"
                android:paddingTop="20dp"
                android:text="Trip Bank"
                android:textColor="@color/toolBar_text"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="80dp"/>


        </LinearLayout>

    </RelativeLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"
        />


</android.support.v4.widget.DrawerLayout>